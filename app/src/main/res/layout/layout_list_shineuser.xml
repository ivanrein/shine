<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:columnCount="2"
        app:rowCount="2"
        android:padding="10dp"
        android:layout_weight="0.564"
        android:layout_margin="10dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ivShineUserPhoto"
            app:layout_columnWeight="0.5"
            app:layout_rowWeight="0.5"
            app:layout_row="0"
            app:layout_column="0"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="0.5"
            app:layout_rowWeight="0.5"
            app:layout_row="0"
            app:layout_column="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvShineUserName"
                android:textSize="20sp"
                android:singleLine="false"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvShineUserRate"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="15dp"
                android:layout_below="@+id/tvShineUserName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvShinerUserBio"
            android:textSize="20sp"
            android:singleLine="false"

            app:layout_columnWeight="1"
            app:layout_rowWeight="0.5"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_columnSpan="2"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/secondText"/>
    </android.support.v7.widget.GridLayout>

