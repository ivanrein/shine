<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    app:columnCount="3"
    app:rowCount="3"
    android:id="@+id/edit_photos_fragment"
    android:background="@color/lightPrimary"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivUser0"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="0dp"
        android:paddingStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        app:layout_rowWeight="0.66"
        app:layout_columnWeight="0.66"
        app:layout_row="0"
        app:layout_column="0"
        app:layout_columnSpan="2"
        android:scaleType="fitXY"
        app:layout_rowSpan="2"
        android:elevation="3dp"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivUser1"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        app:layout_rowWeight="0.33"
        app:layout_columnWeight="0.33"
        app:layout_row="0"
        android:elevation="3dp"

        app:layout_column="2"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivUser2"
        android:layout_marginBottom="10dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        app:layout_rowWeight="0.33"
        app:layout_columnWeight="0.33"
        app:layout_row="1"
        android:elevation="3dp"
        app:layout_column="2"
        android:scaleType="fitXY"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/ivUser3"
        android:layout_marginRight="10dp"
        app:layout_rowWeight="0.33"
        app:layout_columnWeight="0.33"
        app:layout_row="2"
        android:elevation="3dp"

        app:layout_column="0"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/ivUser4"
        android:layout_marginRight="10dp"
        app:layout_rowWeight="0.33"
        app:layout_columnWeight="0.33"
        app:layout_row="2"
        android:elevation="3dp"

        app:layout_column="1"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/ivUser5"
        app:layout_rowWeight="0.33"
        app:layout_columnWeight="0.33"
        app:layout_row="2"
        android:elevation="3dp"

        app:layout_column="2"
        android:scaleType="fitXY"/>

</android.support.v7.widget.GridLayout>
